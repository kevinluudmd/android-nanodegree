
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEEAF1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView android:text="@string/app_title"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_marginBottom="30sp"
                android:layout_height="wrap_content" />

            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/spotify_btn"
                android:text="SPOTIFY STREAMER"
                />
            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/scores_btn"
                android:text="SCORES APP"
                />
            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/library_btn"
                android:text="LIBRARY APP"
                />
            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/bib_btn"
                android:text="BUILD IT BIGGER"
                />

            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/xyz_btn"
                android:text="XYZ READER"
                />

            <Button
                style="@style/AppButton"
                android:onClick="buttonDelegator"
                android:id="@+id/capstone_btn"
                android:text="CAPSTONE: MY OWN APP"
                android:textColor="#fff"
                android:background="#FF0000"
                />



        </LinearLayout>
    </ScrollView>


</LinearLayout>
